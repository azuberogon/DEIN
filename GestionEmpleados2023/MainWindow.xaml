<Window x:Class="GestionEmpleados2023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmpleados2023"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Departamento RRHH" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,33,12,142"/>
        <Button Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Content="Lista de Empleados" Click="ListaEmpleados" Margin="10,0" Height="80"  />
        <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Content="Agregar Empleados"  Click="AgregarEmpleado" Margin="10,0" Height="80" />
        <Button Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Content="Buscar Empleados"   Click="Buscar" Margin="10,0" Height="80"  />
    
    </Grid>
</Window>
